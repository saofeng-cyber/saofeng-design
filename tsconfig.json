{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxImportSource": "vue",
    "importHelpers": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "removeComments": true,
    "paths": {
      "@saofeng-design/sui": ["packages/sui"],
      "@saofeng-design/theme": ["packages/theme"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "examples/**/*.ts",
    "examples/**/*.vue",
    "examples/**/*.tsx",
    "docs/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.js", "**/*.md"]
}
